<h3>以下の内容で投稿する</h3>

<%= form_with(model: @kvitter, url: kvitters_path, local: true) do |form| %>
  <%= form.hidden_field :title %>
  <%= form.hidden_field :content %>

  <p>内容:<%= @kvitter.content %></p>
  <%= form.submit  "投稿" %>
<% end %>

<%= form_with(model: @kvitter, url: new_kvitter_path, local: true, method: 'get') do |form| %>
  <%= form.hidden_field :content %>
  <%= form.submit "もどる", name: 'back' %>
<% end %>